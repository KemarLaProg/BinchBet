<?php
include '../libraries/libUtil.inc.php';
if (isset($_POST['login']) && isset($_POST['password'])) {
  $user = $_POST['login'];
  $pwd = $_POST['password'];
  
  $login = login($user, $pwd);

  if ($login[0]) {
    session_start();
    $_SESSION['connect'] = true;
    $_SESSION['idUser'] = $login[1];
    
    echo "Success";
  } else {
    echo "Failed";
  }
}